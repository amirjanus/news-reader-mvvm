<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image_article_image"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:contentDescription="@string/label_article_image"
        android:scaleType="centerCrop"
        tools:srcCompat="@drawable/ic_image_black_24dp" />

    <TextView
        android:id="@+id/text_article_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_weight="1"
        android:foreground="@drawable/gradient_text_view"
        android:lineSpacingExtra="4sp"
        android:lines="2"
        android:maxLines="2"
        android:textColor="@android:color/primary_text_light"
        android:textSize="20sp"
        tools:text="@string/label_article_title" />

</LinearLayout>
